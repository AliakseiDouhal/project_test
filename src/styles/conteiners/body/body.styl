body
  background: url('/img/alice-donovan-rouse-139182.jpg') no-repeat center center fixed
  background-size: cover

main
  margin-top: 30px
  display: flex
  flex-wrap: wrap
  -webkit-flex-flow: column nowrap
  justify-content: center
  overflow-x: hidden
  overflow-y: hidden

.content
  width: 100%
  max-width: 1440px
  display: -webkit-flex
  justify-content: center
  flex-direction: row
  &-block
    width: 100%
    display: -webkit-flex
    display: flex
    position: relative
    justify-content: center
