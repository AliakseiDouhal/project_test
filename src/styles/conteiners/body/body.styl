body
  background: url('/img/alice-donovan-rouse-139182.jpg') no-repeat center center fixed
  background-size: cover

main
  margin-top: 30px
  display: flex
  flex-wrap: wrap
  justify-content: center
  overflow: hidden

.content
  width: 100%
  max-width: 1440px
  display: flex
  justify-content: center
  flex-direction: row

  &-block
    width: 100%
    display: -webkit-flex
    display: flex
    position: relative
    justify-content: center

.range-slider
  display: flex
  align-items: center
  justify-content: space-around
  & .input-range
    -webkit-appearance: none
    width: 70%
    background-color: #9e9e9e;
    height: 10px
    border-radius: 5px
    outline: none
    overflow hidden
    &::-webkit-slider-thumb
      -webkit-appearance: none
      width: 15%
      height: 20px
      background: #666
      cursor: pointer
      -webkit-transition: background .15s ease-in-out
      transition: background .15s ease-in-out
      box-shadow: -200px 0 0 200px rgba(202, 0, 0, 0.79)
      &:hover
        background: #fff
  &:active::-webkit-slider-thumb
    background: #fff
    &::-moz-range-thumb
      width: 15%
      height: 20px
      border: 0
      background: #666
      cursor: pointer
      -webkit-transition: background .15s ease-in-out
      transition: background .15s ease-in-out
      &:hover
        background: #fff
  &:active::-moz-range-thumb
    background: #fff
  & .range-value
    height 40px
    width: 60px
    color: black
    font-size: 16px
    text-align: center
    border-radius: 3px
    background: white
    padding: 8px 10px
    margin-left: 7px
