#tabs
  .tab-content
    color:  black
    background-color: #e5e3dc
    padding:  5px 15px

.nav-pills
  & > li
    width: 50%
    min-width: 120px

    & > a
      border-radius: 0
      background-color: #d6dadc

    & + li
      margin-left: 0

    &.active
      & > a
        &,
        &:hover,
        &:focus
          color: black
          background-color: #e5e3dc

.tabs-custom
  margin-left:  0
  padding-left: 12%
  padding-right: 0
  max-width: 800px

  & ul
    width: 100%

@media (min-width: 857px)
  #tabs
    margin-right: auto

@media (max-width: 857px)
  .tabs-custom
    width: 90%
    margin: auto !important
    padding-right: 0
    padding-left: 0
