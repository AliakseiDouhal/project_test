img
  height: 34px

a
  font-size: 1.125rem

.container
  margin: 0

  &-fluid
    display: flex
    &> .navbar-collapse,
    &> .navbar-header
      margin-right: 0
      margin-left: 0

  &-fluid-custom
    max-width: 1440px
    width: 100%
    display: flex
    justify-content: space-between

.flex-navbar
  display: flex
  justify-content: center

.dropdown
  flexAlignItemsCenter()
  padding-left: 15px
  min-height: 60px

  &-menu
    left: -70px

.navbar

  &-toggle
    height: 100%
    margin: 12px
    &.active .icon-bar:nth-of-type(2)
      top: 6px
      transform: rotate(45deg)
    &.active .icon-bar:nth-of-type(3)
      background-color: transparent
    &.active .icon-bar:nth-of-type(4)
      top: -6px
      transform: rotate(-45deg)
    .icon-bar
      background-color: slategray
      position: relative
      transition: all 200ms ease-in-out
      &:nth-of-type(3)
        top: 1px
      &:nth-of-type(4)
        top: 2px

.logo
  margin-top: 13px
  padding: 0 45px 0 20px

.list-inline
  padding-left: 15px
  padding-right: 15px

.profile
  border-right: solid 1px #a9a9a9
  border-left: solid 1px #a9a9a9
  height: 60px
  flexAlignItemsCenter()

  img
    padding-left: 5px
    sizeHeaderIcon()

  a
    padding: 0 15px 0 5px

.country-flag
  sizeHeaderIcon()

.nav > li > a
  padding: 20px 9px

.user-setting
  display flex

@media (max-width: 991px)
  .navbar

    &-fixed-top .navbar-collapse,
    &-fixed-bottom .navbar-collapse
      max-height: 100%

    &-header
      float: none
      display: flex
      justify-content: space-between
      align-items: flex-start
      flex-direction: row
      &:before,
      &:after
        display: none

    &-left,
    &-right
      float: none !important

    &-toggle
      display: block

    &-collapse
      border-top: 1px solid transparent
      box-shadow: inset 0 1px 0 rgba(255,255,255,0.1)

      &.collapse
        display: none !important
        overflow-y: scroll !important
        &.in
          display: block !important

    &-fixed-top
      top: 0
      border-width: 0 0 1px

    &-nav
      margin: 0
      float: none !important
      & > li
        float: none
        & > a
          padding-top: 10px
          padding-bottom: 10px

  .flex-navbar
    justify-content: space-between

  .container-fluid-custom
    width: 100%
    padding-right: 0
    padding-left: 0
    flex-direction: column

  .responsive-navigation
    width: 100%
    z-index: 1
    max-height: 100%
    position: fixed
    top: 59px
    bottom: 0
    background-color: #f4f4f4

    ul
      display: flex
      flex-direction: column
      align-items: center

  .hidden-responsive
    hidden()

  .logo
    padding-right: 0

  .profile
    border: 0
    width: 45px

    img
      margin: auto

  .user-setting
    display: flex
    position: absolute
    top: 0
    right: 80px
